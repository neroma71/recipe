{% extends "base.html.twig" %}
{% block title %}ajouter une recette{% endblock %}
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('asset/css/form.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h2>Ajouter une recette</h2>
    {{ form_start(form) }}
        <div class="col">
            {{ form_row(form.name) }}
                <div class="form-error">
                    {{ form_errors(form.name) }} 
                </div>
        </div>
        <div class="col">
            {{ form_row(form.time) }}
                <div class="form-error">
                    {{ form_errors(form.time) }} 
                </div>
        </div>
        <div class="col">
            {{ form_row(form.nbPeople) }}
                <div class="form-error">
                    {{ form_errors(form.nbPeople) }} 
                </div>
        </div>
        <div class="col">
            {{ form_row(form.difficulty) }}
                <div class="form-error">
                    {{ form_errors(form.difficulty) }} 
                </div>
        </div>
        <div class="col">
            {{ form_row(form.description) }}
                <div class="form-error">
                    {{ form_errors(form.description) }} 
                </div>
        </div>
        <div class="col">
            {{ form_row(form.price) }}
                <div class="form-error">
                    {{ form_errors(form.price) }} 
                </div>
        </div>
        <div class="col">
            {{ form_row(form.isFavorite) }}
                <div class="form-error">
                    {{ form_errors(form.isFavorite) }} 
                </div>
        </div>
        {{ form_row(form.ingredients) }}
    {{ form_end(form) }}

    </div>
{% endblock %}