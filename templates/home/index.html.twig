{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('asset/css/style.css') }}">
{% endblock %}

{% block body %}
<main>
    <header>
    <nav>
        <ul>
            <li><a class="nav-link" href="{{ path('app_login') }}">Mon compte</a></li>
        </ul>
    </nav>
        <h1>Mes Recettes !</h1>
    </header>
    <div class="banner"></div>
    <section id="container">
        <h2>Bienvenue sur le site Mes Recettes !</h2>
        <p>Pour poster, rendez-vous sur la page d'inscription ! <a href="{{ path('app_register') }}">Inscription</a></p>
    </section>
     <div class="card-container">
            {% for recipe in recipes %}
             <a href="{{ path('recipe_show', { id: recipe.id }) }}">
                <div class="card">
                    <h3>
                        {{ recipe.name }}
                    </h3>
                    <p>Prix : 
                        {% if recipe.price is null %}
                            Non renseigné
                        {% else %}
                            {{ recipe.price }} €
                        {% endif %}
                    </p>
                    <p>Difficulté : 
                        {% if recipe.difficulty is null %}
                            Non renseigné
                        {% else %}
                            {{ recipe.difficulty }}
                        {% endif %}
                    </p>
                    <p>Date de création : {{ recipe.createdAt|date('d/m/Y') }}</p>
                </div>
                 </a>
            {% endfor %}
        </div>
</main>
{% endblock %}
